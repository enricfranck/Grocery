<VerificationScreen>:
    name:  'Verification'
    MDFloatLayout
        md_bg_color: 1, 1, 1, 1
        padding_x: "20dp"
        FitImage:
            source: "images/Rectangle 17.png"
            pos_hint: {"center_x": 0.5, "center_y": 1}
            size_hint: 1, 0.3
        MDIconButton:
            icon:"less-than"
            icon_size: "36dp"
            pos_hint: {"center_x": 0.08, "center_y": 0.93}
            on_press: root.manager.current= 'Numeric'

        MDLabel:
            text: "[b]Enter your 4-digit code[/b]"
            pos_hint: {"center_x": 0.5, "center_y": 0.80}
            font_size: "18sp"
            halign: "left"
            markup: True
            padding_x: '20dp'
            theme_text_color: "Custom"
        MDTextField:
            id: password
            pos_hint: {"center_x": 0.46, "center_y": .70}
            password: True
            hint_text: "code"
            readonly: False if len(password.text) < 4 else True
            size_hint: 0.8, None
        MDLabel:
            text: "[color=10B34E][ref=label]Resend code[/color][/ref]"
            pos_hint: {"center_x": 0.5, "center_y": 0.37}
            font_size: "14sp"
            halign: "left"
            markup: True
            padding_x: '20dp'
            theme_text_color: "Custom"
        MDFloatingActionButton:
            icon:"greater-than"
            pos_hint: {"center_x": .85, "center_y": .37}
            root_button_anim: True
            disabled: False if password.readonly else True
            on_press: root.manager.current= 'Location'
