<CardItemMyCart>:
    orientation: "vertical"
    md_bg_color: utils.get_color_from_hex('#FFFFFF')
    size_hint: 1, None
    height: dp(130)
    MDSeparator:
        size_hint: 1, None
        height: dp(10)
        md_bg_color: utils.get_color_from_hex('#FFFFFF')
    MDBoxLayout:
        orientation: 'horizontal'
        Image:
            source: root.image
            pos_hint: {"center_x": .2, "center_y": .5}
            size_hint_x: 0.4
            allow_stretch: True
        MDBoxLayout:
            orientation: "vertical"
            MDSeparator:
                size_hint: 1, None
                height: dp(10)
                md_bg_color: utils.get_color_from_hex('#FFFFFF')
            MDBoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: f'{root.name} \n [color=808080]{root.property}[/color]'
                    pos_hint: {"center_x": .5, "center_y": 0.8}
                    font_size: "18sp"
                    halign: "left"
                    markup: True
                    margin_y: "10dp"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')

                MDIconButton:
                    id: button
                    icon: "close"
                    pos_hint: {"center_x":0.95, "center_y":0.8}
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
            MDBoxLayout:
                orientation: "horizontal"
                MDBoxLayout:
                    orientation: "horizontal"
                    MDIconButton:
                        icon: "minus"
                        theme_text_color: "Custom"
                        text_color: utils.get_color_from_hex('#10B34E') if int(qte.text) != 1 else utils.get_color_from_hex('#808080')
                        md_bg_color: utils.get_color_from_hex('#FFFFFF')
                        on_press:
                            f'${int(qte.text)*float(price.text[1:])}'
                            qte.text= str(int(qte.text)-1) if int(qte.text) > 1 else str(1)
                            price.text= f'${float(price.text[1:])-float(root.price[1:])}' if int(qte.text) > 1 else root.price
                    MDLabel:
                        id: qte
                        text: "1"
                        font_size: "14sp"
                        halign: "center"
                        size:dp(10),dp(10)
                        padding_x: "10dp"
                        theme_text_color: "Custom"
                        text_color: utils.get_color_from_hex('#000000')
                    MDIconButton:
                        icon: "plus"
                        theme_text_color: "Custom"
                        text_color: utils.get_color_from_hex('#10B34E')
                        on_press:
                            qte.text= str(int(qte.text)+1)
                            price.text = f'${float(price.text[1:])+float(root.price[1:])}'
                MDLabel:
                    id: price
                    text: root.price
                    font_size: "18sp"
                    halign: "right"
                    padding_x: "10dp"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
            MDSeparator:
                size_hint: 1, None
                height: dp(30)
                md_bg_color: utils.get_color_from_hex('#FFFFFF')