#:import utils kivy.utils

<SplashScreen>:
    name:  'Splash'
    MDFloatLayout
        md_bg_color: 1, 1, 1, 1
        Carousel:
            id: carousel
            on_current_slide:root.current_slide(self.index)
            direction: "right"
            scroll_distance: "50dp"
            MDFloatLayout:
                md_bg_color: utils.get_color_from_hex('#10B34E')
                Image:
                    source: "images/carrotWhiteAndBlack.png"
                    pos_hint: {"center_x": .25, "center_y": .5}
                    size_hint_x: 0.18
                    allow_stretch: True
                MDLabel:
                    text: "nectar"
                    pos_hint: {"center_x": 0.85, "center_y": 0.51}
                    font_size: "46sp"
                    halign: "left"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                MDLabel:
                    text: "online groceriet"
                    pos_hint: {"center_x": 0.85, "center_y": 0.46}
                    font_size: "18sp"
                    halign: "left"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
            MDFloatLayout:
                FitImage:
                    source: "images/welcomeBackground.png"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint: 1, 1
                Image:
                    source: "images/carrotWhiteAndBlack.png"
                    pos_hint: {"center_x": .5, "center_y": .4}
                    size_hint_x: 0.18
                    allow_stretch: True
                MDLabel:
                    text: "[b][size=40sp]Welcome\nto our store[/size][/b]\n Ger our groceries in as fast as one hour"
                    pos_hint: {"center_x": 0.5, "center_y": 0.26}
                    font_size: "14sp"
                    halign: "center"
                    markup: True
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1

                MDFillRoundFlatButton:
                    text: "Get Started"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    md_bg_color: utils.get_color_from_hex('#10B34E')
                    pos_hint: {"center_x": 0.5, "center_y": 0.10}
                    size_hint: 0.8, 0.1
                    on_press: root.manager.current= 'Main'

    MDLabel:
        id:slide0
        text: "."
        color: rgba(253,140 ,95, 255)
        pos_hint: {"center_x": 0.95, "center_y": 0.07}
        font_size: "80sp"
    MDLabel:
        id:slide1
        text: "."
        color: rgba(233, 237 ,240, 255)
        pos_hint: {"center_x": 1, "center_y": 0.07}
        font_size: "80sp"