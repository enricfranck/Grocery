#:import utils kivy.utils

<MainScreen>:
    name:  'Main'
    MDFloatLayout
        md_bg_color: 1, 1, 1, 1
        Carousel:
            id: carousel
            direction: "right"
            scroll_distance: "50dp"
            size_hint: 1, 1
            pos_hint: {"center_x":0.5, "center_y":.5}
            scroll_timeout: 0
##########################################################################################################
                              #HOME SCREEN#
##########################################################################################################
            MDFloatLayout:
                md_bg_color: 1, 1, 1, 1
                FitImage:
                    source: "images/Rectangle 17.png"
                    pos_hint: {"center_x": 0.5, "center_y": 1}
                    size_hint: 1, 1
                Image:
                    source: "images/coloredCarrot.png"
                    pos_hint: {"center_x": .5, "center_y": .92}
                    size_hint_x: 0.1
                    allow_stretch: True
                MDLabel:
                    id: location
                    text: "Antananarivo, Analakely"
                    pos_hint: {"center_x": .5, "center_y": 0.88}
                    font_size: "16sp"
                    halign: "center"
                MDTextFieldRound:
                    icon_left: "magnify"
                    hint_text: "Search Store"
                    pos_hint: {"center_x": .5, "center_y": 0.82}
                    size_hint: .85, .05
                    normal_color: utils.get_color_from_hex('#FFFFFF')
                    color_active: utils.get_color_from_hex('#FFFFFF')
                FitImage:
                    source: "images/banner.png"
                    pos_hint: {"center_x": .5, "center_y": .7}
                    size_hint: 0.95, 0.16
                ScrollView:
                    pos_hint: {"center_x": .5, "center_y": .35}
                    size_hint: 1, 0.5
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: 0
                    MDList:
                        id: scroll
                        spacing: dp(10)
                        MDFloatLayout:
                            md_bg_color: utils.get_color_from_hex('#FFFFFF')
                            size_hint: 0.9, None
                            height: dp(250)
                            orientation: "vertical"
                            MDLabel:
                                text: "Exclusive Offer"
                                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                                font_size: "16sp"
                                halign: "left"
                                padding_x: "10sp"
                            MDLabel:
                                text: "[color=10B34E][ref=label]See all[/ref][/color]"
                                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                                font_size: "16sp"
                                halign: "right"
                                padding_x: "10sp"
                                markup: True
                                theme_text_color: "Custom"
                            ScrollView:
                                pos_hint: {"center_x":0.5, "center_y":.4}
                                do_scroll_x: True
                                do_scroll_y: False
                                size_hint: 1, 1
                                MDBoxLayout:
                                    id: scroll_offer
                                    orientation: "horizontal"
                                    spacing: 10
                                    size_hint: 0.9, 0.9
                                    adaptive_width: True
                                    padding: 5


                        MDFloatLayout:
                            md_bg_color: utils.get_color_from_hex('#FFFFFF')
                            size_hint: 1, None
                            height: dp(250)
                            orientation: "vertical"
                            MDLabel:
                                text: "Best Selling"
                                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                                font_size: "16sp"
                                halign: "left"
                                padding_x: "10sp"
                            MDLabel:
                                text: "[color=10B34E][ref=label]See all[/ref][/color]"
                                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                                font_size: "16sp"
                                halign: "right"
                                padding_x: "10sp"
                                markup: True
                                theme_text_color: "Custom"
                            ScrollView:
                                pos_hint: {"center_x":0.5, "center_y":.4}
                                do_scroll_x: True
                                do_scroll_y: False
                                size_hint: 1, 1
                                MDBoxLayout:
                                    id: scroll_selling
                                    orientation: "horizontal"
                                    spacing: 10
                                    size_hint: 0.9, 0.9
                                    adaptive_width: True
                                    padding: 5


                        MDFloatLayout:
                            md_bg_color: utils.get_color_from_hex('#FFFFFF')
                            size_hint: 1, None
                            height: dp(360)
                            orientation: "vertical"
                            MDLabel:
                                text: "Groceries"
                                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                                font_size: "16sp"
                                halign: "left"
                                padding_x: "10sp"
                            MDLabel:
                                text: "[color=10B34E][ref=label]See all[/ref][/color]"
                                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                                font_size: "16sp"
                                halign: "right"
                                padding_x: "10sp"
                                markup: True
                                theme_text_color: "Custom"
                            ScrollView:
                                pos_hint: {"center_x":0.5, "center_y":.75}
                                do_scroll_x: True
                                do_scroll_y: False
                                size_hint: 1, 0.3
                                bar_width: 0
                                MDBoxLayout:
                                    id: scroll_groceries_1
                                    orientation: "horizontal"
                                    spacing: 10
                                    size_hint: 0.9, 0.9
                                    adaptive_width: True
                                    padding: 5
                            ScrollView:
                                pos_hint: {"center_x":0.5, "center_y":.28}
                                do_scroll_x: True
                                do_scroll_y: False
                                size_hint: 1, 0.7
                                bar_width: 0
                                MDBoxLayout:
                                    id: scroll_groceries_2
                                    orientation: "horizontal"
                                    spacing: 10
                                    size_hint: 0.9, 0.9
                                    adaptive_width: True
                                    padding: 5

##########################################################################################################
                              #EXPLORE SCREEN#
##########################################################################################################
            MDFloatLayout:
                md_bg_color: 1, 1, 1, 1
                orientation: "vertical"
                FitImage:
                    source: "images/Rectangle 17.png"
                    pos_hint: {"center_x": 0.5, "center_y": 1}
                    size_hint: 1, 1.8
                MDLabel:
                    id: label0
                    text: "[b]Find product[/b]"
                    pos_hint: {"center_x":0.5, "center_y":0.95}
                    font_size: "16sp"
                    halign: "center"
                    markup: True
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
                MDTextFieldRound:
                    icon_left: "magnify"
                    #icon_right: 'eye-off'
                    hint_text: "Search Store"
                    pos_hint: {"center_x": .5, "center_y": 0.86}
                    size_hint: .8, .05
                    normal_color: utils.get_color_from_hex('#FFFFFF')
                    color_active: utils.get_color_from_hex('#FFFFFF')
                ScrollView:
                    size_hint: 0.9, 0.72
                    do_scroll_x: False
                    bar_width: 0
                    pos_hint: {"center_x": .5, "center_y": 0.45}
                    MDGridLayout:
                        id: list_grid
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: dp(10)
                        cols: 2

##########################################################################################################
                              #MY CART SCREEN#
##########################################################################################################
            MDFloatLayout:
                md_bg_color: 1, 1, 1, 1
                orientation: "vertical"
                md_bg_color: utils.get_color_from_hex('#FFFFFF')
                FitImage:
                    source: "images/Rectangle 17.png"
                    pos_hint: {"center_x": 0.5, "center_y": 1}
                    size_hint: 1, 1.8
                MDLabel:
                    id: label0
                    text: "[b]My Cart[/b]"
                    pos_hint: {"center_x":0.5, "center_y":0.95}
                    font_size: "20sp"
                    halign: "center"
                    markup: True
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
                MDSeparator:
                    pos_hint: {"center_x": .5, "center_y": 0.91}
                    size_hint: 1, None
                    height: dp(2)
                    md_bg_color: utils.get_color_from_hex('#808080')
                ScrollView:
                    size_hint: 0.9, 0.79
                    do_scroll_x: False
                    bar_width: 0
                    pos_hint: {"center_x": .5, "center_y": 0.5}
                    MDGridLayout:
                        id: list_my_cart
                        size_hint_y: None
                        md_bg_color: utils.get_color_from_hex('#808080')
                        height: self.minimum_height
                        spacing: dp(2)
                        cols: 1

##########################################################################################################
                              #BOTTOM NAVIGATION#
##########################################################################################################

        MDBoxLayout:
            md_bg_color: 1, 1, 1, 1
            pos_hint: {"center_x":0.5, "center_y":0.02}
            size_hint:1, 0.08
            orientation: 'horizontal'
            MDFloatLayout:
                orientation: 'vertical'
                spacing: 2
                MDIconButton:
                    id: button0
                    icon: "shopping-outline"
                    pos_hint: {"center_x":0.5, "center_y":0.9}
                    on_press: root.select_screen(0)
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#10B34E')
                MDLabel:
                    id: label0
                    text: "Shop"
                    pos_hint: {"center_x":0.5, "center_y":0.6}
                    font_size: "11sp"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#10B34E')
            MDFloatLayout:
                orientation: 'vertical'
                spacing: 2
                MDIconButton:
                    id: button1
                    icon: "text-search"
                    pos_hint: {"center_x":0.5, "center_y":0.9}
                    on_press: root.select_screen(1)
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
                MDLabel:
                    id: label1
                    text: "Explore"
                    pos_hint: {"center_x":0.5, "center_y":0.6}
                    font_size: "11sp"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
            MDFloatLayout:
                orientation: 'vertical'
                spacing: 2
                MDIconButton:
                    id: button2
                    icon: "cart-minus"
                    pos_hint: {"center_x":0.5, "center_y":0.9}
                    on_press: root.select_screen(2)
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
                MDLabel:
                    id: label2
                    text: "Cart"
                    pos_hint: {"center_x":0.5, "center_y":0.6}
                    font_size: "11sp"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
            MDFloatLayout:
                orientation: 'vertical'
                spacing: 2
                MDIconButton:
                    id: button3
                    icon: "heart-outline"
                    pos_hint: {"center_x":0.5, "center_y":0.9}
                    on_press: root.select_screen(3)
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
                MDLabel:
                    id: label3
                    text: "Favorite"
                    pos_hint: {"center_x":0.5, "center_y":0.6}
                    font_size: "11sp"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
            MDFloatLayout:
                orientation: 'vertical'
                spacing: 2
                MDIconButton:
                    id: button4
                    icon: "account-outline"
                    pos_hint: {"center_x":0.5, "center_y":0.9}
                    on_press: root.select_screen(4)
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')
                MDLabel:
                    id: label4
                    text: "Account"
                    pos_hint: {"center_x":0.5, "center_y":0.6}
                    font_size: "11sp"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#000000')

