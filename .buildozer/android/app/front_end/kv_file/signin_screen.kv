<SigninScreen>:
    name:  'Signin'
    MDFloatLayout
        md_bg_color: 1, 1, 1, 1
        FitImage:
            source: "images/connectingBackground.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            size_hint: 1, 0.4
        MDLabel:
            text: "Get your groceries"
            pos_hint: {"center_x": 0.55, "center_y": 0.54}
            font_size: "18sp"
            halign: "left"
            markup: True
            theme_text_color: "Custom"
        MDLabel:
            text: "with nectar"
            pos_hint: {"center_x": 0.55, "center_y": 0.50}
            font_size: "18sp"
            halign: "left"
            markup: True
            theme_text_color: "Custom"
        MDIconButton:
            icon: "email"
            pos_hint: {"center_x": .1, "center_y": .45}
        MDTextField:
            id: text_field_num
            pos_hint: {"center_x": 0.55, "center_y": 0.45}
            text: "+261"
            size_hint: 0.8, None
            readonly: True
            on_focus:
                root.manager.current= 'Numeric'
        MDLabel:
            text: "Or connect with soscial media"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.37}
            font_size: "12sp"
            halign: "center"
            theme_text_color: "Custom"
            size_hint: 1, None
        MDFillRoundFlatIconButton:
            icon: "google"
            text: "Continue with google"
            theme_text_color: "Custom"
            md_bg_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.26}
            md_bg_color: utils.get_color_from_hex('#5383EC')
            size_hint:.8, .088
            on_press:
                root.manager.current= 'Numeric'
        MDFillRoundFlatIconButton:
            icon: "facebook"
            theme_text_color: "Custom"
            text: "Continue with facebook"
            md_bg_color: utils.get_color_from_hex('#4A66AC')
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            size_hint: .8, .088


