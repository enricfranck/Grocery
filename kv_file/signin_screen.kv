<SplashScreen>:
    name:  'Signin'
    MDFloatLayout
        md_bg_color: 1, 1, 1, 1
        FitImage:
            source: "images/connectingBackground.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            size_hint: 1, 0.4
        MDLabel:
            text: "Get your groceries"
            pos_hint: {"center_x": 0.55, "center_y": 0.54}
            font_size: "18sp"
            halign: "left"
            markup: True
            theme_text_color: "Custom"
        MDLabel:
            text: "with nectar"
            pos_hint: {"center_x": 0.55, "center_y": 0.50}
            font_size: "18sp"
            halign: "left"
            markup: True
            theme_text_color: "Custom"
        MDTextField:
            pos_hint: {"center_x": 0.55, "center_y": 0.40}
            id: text_field
            text: "+880"
            icon_left: "key-variant"
