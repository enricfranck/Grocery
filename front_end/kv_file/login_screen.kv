#: import MyMDTextField front_end.component.my_text_field.MyMDTextField

<LoginScreen>:
    name:  'Login'
    MDFloatLayout
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "images/Rectangle 17.png"
            pos_hint: {"cente_x": 0.5, "center_y": 1}
            size_hint: 1, 0.5
        Image:
            source: "images/coloredCarrot.png"
            pos_hint: {"center_x": .5, "center_y": .88}
            size_hint: 0.135, 0.082
        MDLabel:
            text: "[b]Loging[/b]"
            pos_hint: {"center_x": 0.55, "center_y": 0.72}
            font_size: "18sp"
            halign: "left"
            markup: True
            theme_text_color: "Custom"
        MDLabel:
            text: "Enter your emails and password"
            pos_hint: {"center_x": 0.55, "center_y": 0.67}
            font_size: "12sp"
            halign: "left"
            markup: True
            theme_text_color: "Custom"
        MDTextField:
            hint_text: "Email"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            size_hint: 0.9, None
        MyMDTextField:
            hint_text: "Password"
            pos_hint: {"center_x": 0.5, "center_y": 0.43}
            size_hint: 0.9, None
            password: True
            helper_text_mode:"on_error"
            icon_right:"eye-off"
        MDLabel:
            text: "forgot password ?"
            pos_hint: {"center_x": 0.5, "center_y": 0.37}
            font_size: "12sp"
            halign: "right"
            markup: True
            padding_x: 20
            theme_text_color: "Custom"
        MDFillRoundFlatButton:
            text: "Log in"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            md_bg_color: utils.get_color_from_hex('#10B34E')
            pos_hint: {"center_x": 0.5, "center_y": 0.27}
            size_hint: 0.8, 0.1
            #on_press: root.manager.current= 'Signin'
        MDLabel:
            text: "Don't have an account? [color=10B34E][ref=label]Sign Up[/ref][/color]"
            markup: True"
            pos_hint: {"center_x": 0.5, "center_y": 0.18}
            font_size: "12sp"
            halign: "center"
            markup: True
            theme_text_color: "Custom"
            border: 1
            on_ref_press: root.manager.current= 'Signup'