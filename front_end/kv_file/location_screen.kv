<LocationScreen>:
    name:  'Location'
    MDFloatLayout
        md_bg_color: 1, 1, 1, 1
        paddind_x: "20dp"
        Image:
            source: "images/Rectangle 17.png"
            pos_hint: {"cente_x": 0.5, "center_y": 1}
            size_hint: 1, 0.6
        Image:
            source: "images/locationImage.png"
            pos_hint: {"center_x": .5, "center_y": .80}
            size_hint: 0.55, 0.22
        MDIconButton:
            icon:"less-than"
            icon_size: "36dp"
            pos_hint: {"center_x": 0.08, "center_y": 0.93}
            on_press: root.manager.current= 'Verification'

        MDLabel:
            text: "[b][size=20sp]Select Your Location[/size][/b] \n \n Switch on your location to stay in tune with what's happening in your area"
            pos_hint: {"center_x": 0.5, "center_y": 0.60}
            font_size: "14sp"
            halign: "center"
            markup: True
            padding_x: '20dp'
            theme_text_color: "Custom"
        MDTextField:
            id: zone
            pos_hint: {"center_x": 0.5, "center_y": 0.44}
            hint_text: "Your Zone"
            size_hint: 0.8, None
            readonly: True
            on_focus:
                root.manager.current= 'Numeric'
        MDTextField:
            id: zone
            pos_hint: {"center_x": 0.5, "center_y": 0.32}
            hint_text: "Your Area"
            size_hint: 0.8, None
            readonly: True
            on_focus:
                root.manager.current= 'Numeric'
        MDFillRoundFlatButton:
            text: "Submit"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            md_bg_color: utils.get_color_from_hex('#10B34E')
            pos_hint: {"center_x": 0.5, "center_y": 0.15}
            size_hint: 0.8, 0.1
            on_press: root.manager.current= 'Login'

