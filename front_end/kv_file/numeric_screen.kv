<NumericScreen>:
    name: 'Numeric'
    MDFloatLayout
        md_bg_color: 1, 1, 1, 1
        padding_x: "20dp"
        Image:
            source: "images/Rectangle 17.png"
            pos_hint: {"center_x": 0.5, "center_y": 1}
            size_hint: 1, 1
        MDIconButton:
            icon:"less-than"
            icon_size: "36dp"
            pos_hint: {"center_x": 0.08, "center_y": 0.93}
            on_press:
                root.go_next('Signin')

        MDLabel:
            text: "[b]Enter your mobile number[/b]"
            pos_hint: {"center_x": 0.5, "center_y": 0.80}
            font_size: "18sp"
            halign: "left"
            markup: True
            padding_x: '20dp'
            theme_text_color: "Custom"
        MDLabel:
            text: "Mobile Number"
            pos_hint: {"center_x": 0.5, "center_y": 0.73}
            font_size: "12sp"
            halign: "left"
            markup: True
            padding_x: '20dp'
            theme_text_color: "Custom"
        MDIconButton:
            icon: "email"
            pos_hint: {"center_x": .1, "center_y": .68}
        MDTextField:
            pos_hint: {"center_x": 0.55, "center_y": .68}
            text: "+261"
            size_hint: 0.8, None
        MDFloatingActionButton:
            icon:"greater-than"
            pos_hint: {"center_x": .85, "center_y": .37}
            root_button_anim: True
            on_press: root.manager.current= 'Verification'
